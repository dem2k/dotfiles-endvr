# alte aliase entfernen
unalias l ll la &> /dev/null

# Beim Laden der Shell einmal prÃ¼fen und Command speichern
if command -v eza >/dev/null 2>&1; then
    export EZA_ICON_SPACING=2
    _LS_CMD=(eza --icons --no-quotes)
else
    _LS_CMD=(ls --color=auto)
fi

l() {
    "${_LS_CMD[@]}" -lhF "$@"
}

ll() {
    "${_LS_CMD[@]}" -alhF "$@"
}

